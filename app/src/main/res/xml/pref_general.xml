<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="pref_force_pause"
        android:summary="@string/pref_description_force_pause"
        android:title="@string/pref_title_force_pause" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="pref_show_skip_button"
        android:summary="@string/pref_description_show_skip_button"
        android:title="@string/pref_title_show_skip_button" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="pref_through_mode"
        android:summary="@string/pref_description_through_mode"
        android:title="@string/pref_title_through_mode" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="pref_count_exam_answer_statistics"
        android:summary="@string/pref_description_count_exam_answer_statistics"
        android:title="@string/pref_title_count_exam_answer_statistics" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="pref_keep_screen_on"
        android:summary="@string/pref_description_keep_screen_on"
        android:title="@string/pref_title_keep_screen_on" />

    <ListPreference
        android:defaultValue="2"
        android:entries="@array/pref_questions_version_entries"
        android:entryValues="@array/pref_questions_version_entryValues"
        android:key="pref_questions_version"
        android:summary="@string/pref_description_questions_version"
        android:title="@string/pref_title_questions_version_title" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="pref_show_outdated"
        android:summary="@string/show_outdated_title"
        android:title="@string/show_outdated_title" />
</PreferenceScreen>
